<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp">


        <ImageView
            android:id="@+id/imageHeader"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/missions" />

        <TextView
            android:id="@+id/tvScreenTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/russo_one"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            android:text="Місії"
            android:textColor="#D35400"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvScreenSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/russo_one"
            android:paddingBottom="12dp"
            android:text="Список важливих академічних завдань на поточний період."
            android:textColor="#D35400"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvMissionsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/russo_one"
            android:paddingBottom="4dp"
            android:text="Поточні місії"
            android:textColor="#D35400"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:background="#DDDDDD" />

        <TextView
            android:id="@+id/inpL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#D35400"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/inpLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="#549254"
                android:text="ГОЛОВНИЙ ЕКРАН" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
